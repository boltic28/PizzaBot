<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_screen_padding"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:id="@id/map"
        android:layout_width="@dimen/map_size"
        android:layout_height="@dimen/map_size"
        android:layout_marginBottom="@dimen/map_size_margin_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/logger_view"
        app:layout_constraintTop_toTopOf="parent">

        <com.boltic28.pizzabot.data.MapView
            android:id="@+id/delivery_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/logger_view"
        android:layout_width="@dimen/map_size"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:text="@string/logging"
        app:layout_constraintBottom_toTopOf="@+id/input_field"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <EditText
        android:id="@+id/input_field"
        android:layout_width="@dimen/map_size"
        android:layout_height="wrap_content"
        android:background="@color/map_bg"
        android:text="@string/base_order_template"
        android:hint="@string/input_your_order"
        app:layout_constraintBottom_toTopOf="@id/start_delivery"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logger_view" />

    <Button
        android:id="@+id/start_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_delivery"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>